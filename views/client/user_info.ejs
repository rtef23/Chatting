<style>
	div#user_info{
		width:100%;
		height:100%;
		background-color:#e6f2ff;
	}
</style>
<div id='user_info'>
<form id='edit_user_form'>
	<p><B>ID : <%= id %> </B></p>
	<p><B>Nick Name : </B><input id='edit_user_nick' type='text' value='<%= nickname %>' /></p>
	<p><B>Name : </B><input id='edit_user_name' type='text' value='<%= name %>' /></p>
	<input type='submit' value='edit' />
	<input type='hidden' id='edit_user_id' value='<%= id %>' />
</form>
</div>
<script>
	$('#edit_user_form').submit(function(){
		if($('#edit_user_nick').val() == ''){
			alert('Nick Name을 입력하세요.');
			$('#edit_user_nick').focus();
			return false;
		}
		if($('#edit_user_name').val() == ''){
			alert('Name을 입력하세요.');
			$('#edit_user_name').focus();
			return false;
		}
		$.ajax({
			url : '/member_update',
			method : 'POST',
			data : {
				id : $('#edit_user_id').val(),
				nickname : $('#edit_user_nick').val(),
				name : $('#edit_user_name').val()
			},
			success : function(res){
				var res_data = JSON.parse(res);
				switch(res_data.result){
					case 0:
					{
						alert("error\nplease try again");
					}
					break;
					case 1:
					{
						alert("success in updating!!!");
					}
					break;
				}
			}
		});
		return false;
	});
</script>